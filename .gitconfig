[user]
	name = Mark Simpson
	email = msimpson@itbit.com
	signingKey = 0x3CCF1592D6E49D1B

[color]
	ui=auto

[alias]
	aa = add --all
	ci = commit -v
	co = checkout
	dc = diff --cached
	di = diff
	l = "log --pretty=format:'%Cred%h%Creset %Cgreen%<(8,trunc)(%cr)%Creset %Cblue%<(15,trunc)<%an>%Creset %<(72,trunc)%s %C(yellow)%d%Creset'"
  lo = "log --oneline"
  lg = "!git l --graph"
	lsalias = config --get-regexp alias
	man = help
	rehead = reset --hard HEAD

[github]
	user = mjs-itbit

[push]
	default = simple

[rerere]
        enabled = true
	autoUpdate = true
[remote]
	pushDefault = origin
[pull]
	rebase = preserve
[credential]
	helper = osxkeychain
[diff]
	mnemonicPrefix = true
[github "paxos.github.com"]
	user = git
[github "api.paxos.github.com"]
	user = git
[github "paxos.api.github.com"]
	user = msimpson
[commit]
	gpgSign = true
