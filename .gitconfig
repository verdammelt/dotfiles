[alias]
	aa = add --all
	ci = commit -v
	co = checkout
	dc = diff --cached
	di = diff
	l = log --oneline
        lg = "log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --"
	lsalias = config --get-regexp alias
	man = help
	rehead = reset --hard HEAD

[github]
