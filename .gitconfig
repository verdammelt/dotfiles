[user]
	name = Mark Simpson
	email = msimpson@itbit.com
	signingKey = 0x3CCF1592D6E49D1B

[color]
	ui=auto

[alias]
	aa = add --all
	ci = commit -v
	co = checkout
	dc = diff --cached
	di = diff
	l = log --oneline
        lg = "log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --"
	lsalias = config --get-regexp alias
	man = help
	rehead = reset --hard HEAD

[github]
	user = mjs-itbit

[push]
	default = simple

[rerere]
        enabled = true
	autoUpdate = true
[remote]
	pushDefault = origin
[pull]
	rebase = preserve
[credential]
	helper = osxkeychain
[diff]
	mnemonicPrefix = true
[github "paxos.github.com"]
	user = git
[github "api.paxos.github.com"]
	user = git
[github "paxos.api.github.com"]
	user = msimpson
[commit]
	gpgSign = true
